<body>

  
 <!-- Default panel contents -->
   <div class="panel-heading">Login</div>
        <div class="panel-body">
   <form class="form-horizontal" role="form">
   <div class="form-group  usernameDiv">
       <label class="inputUsername" class="col-sm-2 control-label pull-left">Username:</label>
         <div class="col-sm-10">
        <input type="text" ng-model="username" class="form-control" name="username" id="username" placeholder="">
      </div>
      </div>
       <div class="form-group  usernameDiv">
	                    <label class="inputPassword">Password</label>
		<div class="col-sm-10">
		<input type="password" ng-model="password" name="password" id="password" class="form-control">   
		  </div>
	                  </div>
	                  <br>
	                  <div class="form-group ">
	                    <div class="pull-left signIn">
	                      <button ng-click="signIn()" class="btn btn-primary">Sign in</button>
	                    </div>
	                  </div>
     </form>
        </div>
	</div>
<script>
	function signInController($scope,$http,$location) {
	    
		$scope.signIn = function() {
	    	$http({
	            method: 'POST',
	            url: '/ulogin',
	            data: { "username": $scope.username, "password": $scope.password }
	            
	         }).success(function(response){
	           
	            //alert(JSON.stringify(response));
	            
	            if(response.signin == "Success")
	           	{//	window.location = '/successLogin';
	           	alert("Great");
	            }
	            else
	            {
	            //	window.location = '/failLogin';
	            alert("Try Again"); 
	            }
	        }).error(function(error){
	            alert("error");
	        });
	    };
	}
	</script>


</body>
